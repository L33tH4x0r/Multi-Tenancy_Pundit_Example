<h2>Create an Account</h2>
<div class="col-md-12">
  <%= simple_form_for @account do |f| %>

    <%= fields_for :owner do |o| %>
      <%= simple_form_for :name do |o| %>
        <%= o.text_field :name, class: 'form-control' %>
      <% end %>
      <%= simple_form_for :email do |o| %>
        <%= o.text_field :email, class: 'form-control' %>
      <% end %>
      <%= simple_form_for :password do |o| %>
        <%= o.text_field :password, class: 'form-control' %>
      <% end %>
      <%= simple_form_for :password_confirmation do |o| %>
        <%= o.text_field :password_confirmation, class: 'form-control' %>
      <% end %>
    <% end %>
    <div class="row">
      <div class="form-group col-md-8">
        <%= f.label :subdomain %>
        <%= f.text_field :subdomain, class: "form-control" %>
      </div>
    </div>
    <%= f.button :submit %>
  <% end %>
</div>
